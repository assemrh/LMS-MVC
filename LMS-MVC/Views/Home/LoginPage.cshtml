@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="sidenav">
    <div class="login-main-text">
        <h2>Application<br> Login Page</h2>
        <p>Login or register from here to access.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-12 r-form">
        <div class="login-form">
            <form id="form1" name="RegisterForm" runat="server">
                <div class="form-group row">
                    <label for="full_name" class="col-md-4 col-form-label text-md-right">Full Name</label>
                    <div class="col-md-6">
                        <asp:TextBox id="full_name" class="form-control" name="full-name" runat="server" />
                        <asp:RequiredFieldValidator ID="rfvhouse" runat="server"
                                                    ControlToValidate="full_name" ErrorMessage="Enter your name" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator>
                    </div>

                </div>

                <div class="form-group row">
                    <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>
                    <div class="col-md-6">
                        <asp:TextBox id="email_address" class="form-control" name="email-address" runat="server" />
                        <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server"
                                                    ControlToValidate="email_address" ErrorMessage="Enter your Email" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="user_name" class="col-md-4 col-form-label text-md-right">User Name</label>
                    <div class="col-md-6">
                        <asp:TextBox id="user_name" class="form-control" name="username" runat="server" />
                        <asp:RequiredFieldValidator ID="RequiredFieldValidator2" runat="server"
                                                    ControlToValidate="user_name" ErrorMessage="Enter your username" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="phone_number" class="col-md-4 col-form-label text-md-right">Phone Number</label>
                    <div class="col-md-6">
                        <asp:TextBox id="phone_number" class="form-control" runat="server" />
                        <asp:RequiredFieldValidator ID="RequiredFieldValidator3" runat="server"
                                                    ControlToValidate="phone_number" ErrorMessage="Enter your Phone Number" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator>
                    </div>
                </div>



                <div class="form-group row" hidden>
                    <label for="permanent_address" class="col-md-4 col-form-label text-md-right">Permanent Address</label>
                    <div class="col-md-6">
                        <asp:TextBox id="address" class="form-control" name="address" runat="server" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="password" class="col-md-4 col-form-label text-md-right">
                        <abbr title="Enter a password">Password</abbr>
                    </label>

                    <div class="col-md-6">
                        <asp:TextBox id="password" class="form-control" TextMode="Password" name="password" runat="server" />
                        <asp:RequiredFieldValidator ID="RequiredFieldValidator4" runat="server"
                                                    ControlToValidate="password" ErrorMessage="Enter a password" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator>
                    </div>
                </div>

                <div class="col-md-6 offset-md-4">
                    <asp:Button OnClientClick="" id="btnsubmit" name="btnname" class="btn btn-primary" Text="Register" runat="server" />
                </div>
            </form>


        </div>
    </div>
    <div class="card-body text-success">

        <asp:Label ID="Label4" class="card-text" runat="server" Text=""></asp:Label>
    </div>

    </div>